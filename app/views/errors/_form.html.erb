<%= form_for(@error) do |f| %>
  <% if @error.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@error.errors.count, "error") %> prohibited this error from being saved:</h2>

      <ul>
      <% @error.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :"copy and paste the error that you see" %><br />
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :"explain what is happening" %><br />
    <%= f.text_area :explanation %>
  </div>
  
  <div class="field">
    <%= f.label :"submit link to Github/Gist file" %><br />
    <%= f.text_field :url %>
  </div>
  
  <div class="field">
    <%= f.label :"pick a topic category"%><br />
    <%= f.collection_select :topic_id, @topics, :id, :name %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
